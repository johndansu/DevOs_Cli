[pylint]
# Disable certain checks that are too strict or not relevant
disable=[
    "R0801",  # duplicate-code - Common in CLI commands with similar patterns
    "R0903",  # too-few-public-methods - Small utility classes are fine
    "C0114",  # missing-module-docstring - Some modules don't need docstrings
    "C0115",  # missing-class-docstring - Some classes are self-explanatory
    "C0116",  # missing-function-docstring - Some functions are obvious
    "W0613",  # unused-argument - Common in callback functions
    "R0913",  # too-many-arguments - Some functions need many parameters
    "R0914",  # too-many-locals - Complex functions may need many locals
    "R0915",  # too-many-statements - Some functions are naturally complex
    "W0703",  # broad-except - Sometimes we need to catch all exceptions
    "R1732",  # consider-using-with - Not always applicable
]

# Minimum line length for functions/classes that require docstrings
docstring-min-length=10

# Maximum number of characters on a line
max-line-length=120

# Maximum number of branches for function/method body
max-branches=15

# Maximum number of locals for function/method body
max-locals=20

# Maximum number of statements for function/method body
max-statements=60

# Maximum number of arguments for function/method
max-args=8

# Maximum number of public methods for class
max-public-methods=25

# Minimum similarity score for duplicate code detection
min-similarity-lines=8

# Files to ignore
ignore=[
    "tests/",
    "build/",
    "dist/",
    "*.egg-info/",
    "__pycache__/",
    ".pytest_cache/",
]
